<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="45sp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/textoB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textSize="45sp"
        android:background="@android:color/holo_green_light"
        android:layout_below="@id/textoC"
        android:layout_toRightOf="@id/textoC"/>

    <TextView
        android:id="@+id/textoC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="45sp"
        android:background="@android:color/holo_red_dark"
        android:layout_below="@id/textoA"
        android:layout_toLeftOf="@id/textoA"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoB"
        android:text="Praticando alinnhamento de elementos no Relative Layout"/>

    <Button
        android:id="@+id/botaoFera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:text="um botÃ£o desse bicho!!!"/>



</RelativeLayout>